              <a class="nav-link move" href="/admin">Admin</a>
            </li>
          </ul>
      
      </div>
      </nav>
    
   </section>
    <section id="admin">
        <div class="notification">
            <p style="color: green; font-size: 25;"><%=message%></p>
        </div>
        <div class="log">
            <p>Your Logo</p>
         <img src="/logo.jpg" alt="No Image Available" width="200" height="200">
        </div>
       <div class="inputImage">
            <form ref='uploadForm' id='uploadForm' action="/admin" method="POST" encType="multipart/form-data">
                 <label for="Image">Add your Logo:</label>
                 <input type="file" id="myFile" name="Image">
                 <button type="submit" class="btn btn-primary">Add Logo</button>
            </form>
       </div>
      <div style="margin-top: 10%;border-top: 2px solid black"  class="details">
        <div class="notification">
             <p style="color: green; font-size: 25;margin-top: 15px;">Add your details if You Have Not Added(Default Values are already added)</p>
        </div>
         <div style="padding-top: 7%;">
           <h3 style="margin-bottom: 5%;">Let Us Know You!</h3>
            <form action="/shopDetails" method="POST">
              <div class="form-group">
                <label style="font-size: 25px;" for="exampleInputEmail1">Your Brand Name</label>
                <input type="text" name="shopName" class="form-control" id="exampleInputEmail1" >
              </div>
              <div style="font-size: 25px;" class="form-group">
                <label for="exampleInputPassword1">Your Address</label>
                <input type="text" name="address1" class="form-control" id="exampleInputPassword1" placeholder="Line 1">
                <input type="text" name="address2" class="form-control" id="exampleInputPassword1" placeholder="Line 2">
              </div>
              <div class="form-group">
                <label style="font-size: 25px;" for="exampleInputEmail1">Phone Number</label>
                <input type="text" name="phoneNumber" class="form-control" id="exampleInputEmail1" >
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          </div>
       </div>
    </section>
  </body>