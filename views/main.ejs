    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/index.css">
</head>
<body>
  
    <section>
      
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          
            <a class="navbar-brand" href="/">Invoice</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav">
                <li class="nav-item active">
                  <a class="nav-link move" href="/">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                  <a class="nav-link move" href="/analysis">Analysis<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                  <a class="nav-link move" href="/invoice">Your Invoices</a>
                </li>
                <li class="nav-item active">
                  <a class="nav-link move" href="/admin">Admin</a>
                </li>
              </ul>
          
          </div>
          </nav>
        
    </section>
  
    <section>
      <div class="container-fluid">
        <form id="form2" action="/productData" method="POST"></form>
        <p style="color: rgb(24, 163, 24); font-size: 28px;"><%=productArray.length%> products added to this Bill</p>
        <p style="margin-top: 3%;">Note: Add Your Logo and Details in Admin Section</p>
        <form action="/gulaothi" method="POST">
            <div class="mycontainer">
              <div class="form-group productDetails">
                <h1 class="heading" style="margin-bottom: 10%;">Product Details</h1>
                <div class="form-group">
                  <label for="productPurchased">Product Purchased</label>
                  <input type="text" name="product" class="form-control" id="productPurchsed" form="form2">
                </div>
                <div class="form-group">
                  <label for="quantityPurchased">Quantity</label>
                  <input type="number" name="quantity" class="form-control" form="form2" id="quantityPurchsed">
                </div>
                <div class="form-group">
                  <label for="Price">Price</label>
                  <input type="number" name="price" class="form-control" id="Price" form="form2">
                </div>
                <button type="submit" form ="form2" class="btn btn-primary">Add Products</button>
               
            </div>
              <div class="form-group cutomerDetails">
                  <h1 class="heading" style="margin-bottom: 10%;">Customer Details</h1>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Customer Name</label>
                    <input type="text" class="form-control"  name="name" id="exampleInputEmail1" aria-describedby="emailHelp">
                  </div>
                  <div class="form-group">
                    <label for="Invoice">Invoice Number</label>
                    <input type="number" name="Invoice"  class="form-control" id="Invoice">
                  </div>
                  <div class="form-group">
                    <label for="discount">Discount</label>
                    <input type="number" name="discount"  class="form-control" id="Invoice" value="0">
                  </div>
                  <button type="submit" class="btn btn-primary invoiceButton" >Submit Invoice</button>
                  <p style="margin-top: 10%;">Note: Add Product Details and the Submit </p>
              </div>
             
              
          </div>
        </form>
          <div class="purchase" style="margin-top: 3%;">
              <h2>Purchased Product Details</h2> 
              <form action="/restore" method="POST">
                  <button class="btn btn-danger">Restore</button>
              </form>
              <%for(var i=0;i<productArray.length;i++){%>
                    <div class="purchaseDetails">
                        <p>Product : <span class="away"><%=productArray[i].productName%></span> Price : <span class="away"><%=productArray[i].price%></span> Quantity: <span class="away"><%=productArray[i].quantity%></span></p>
                    </div> 
              <%}%>
              <h2 style="margin-top: 15px; font-size: 25px;">Total Amount: Rs <%=total%></h2>
              
          </div>
          
        
      </div>
    </section>
    <footer>
          <p>Created By Devesh Teotia</p>
    </footer>
</body>
</html>